<h1>Burgers!</h1>

<h2>Burgers that is planned to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	    {{burger_name}}

	    <button class="devour" data-id="{{id}}" >
		DEVOUR!!!
	    </button>
        </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
          {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
